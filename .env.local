# Local development environment variables
# Update DATABASE_URL/DIRECT_URL to your real database before enabling auth
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/metronic?schema=public
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/metronic?schema=public

# NextAuth config
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=devsecret

# Client base path and API URL (keep empty for same-origin)
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_API_URL=http://localhost:3003

# Temporarily disable auth across app and APIs
AUTH_DISABLED=true
NEXT_PUBLIC_AUTH_DISABLED=true